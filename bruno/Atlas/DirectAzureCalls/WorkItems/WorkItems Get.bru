meta {
  name: WorkItems Get
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/Dev/_apis/wit/wiql?api-version=7.1
  body: json
  auth: bearer
}

params:query {
  api-version: 7.1
}

auth:bearer {
  token: {{AzureDevopsPAT}}
}

body:json {
  {
    "query": "SELECT [System.Id], [System.Title], [System.State] FROM WorkItems WHERE [System.TeamProject] = @project AND [System.AreaPath] UNDER 'Dev\\Structural Legends' ORDER BY [System.Id] DESC"
  }
  
}

settings {
  encodeUrl: true
  timeout: 0
}
