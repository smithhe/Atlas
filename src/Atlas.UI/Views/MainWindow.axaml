<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Atlas.UI.ViewModels"
        xmlns:views="using:Atlas.UI.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Atlas.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Team Lead Console"
        Width="1200"
        Height="760"
        MinWidth="960"
        MinHeight="640">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="48,*">
        <!-- Top bar -->
        <Border Grid.Row="0" Background="{DynamicResource AppPanelBackgroundAltBrush}" BorderBrush="{DynamicResource AppBorderBrush}" BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="220,*,Auto" Margin="14,0">
                <TextBlock Grid.Column="0"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Text="Team Lead Console"/>

                <Border Grid.Column="1"
                        Margin="14,0"
                        VerticalAlignment="Center"
                        Classes="card"
                        CornerRadius="10"
                        BorderThickness="1"
                        Height="34">
                    <TextBox Margin="10,0"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Watermark="Search tasks, risks, people…"
                             Text="{Binding SearchText}"/>
                </Border>

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Spacing="10">
                    <Button Classes="primary"
                            Padding="12,6"
                            Content="+ Quick Add"
                            Command="{Binding QuickAddCommand}"/>

                    <Button Padding="12,6"
                            Content="AI ▸"
                            Command="{Binding ToggleAiCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Body -->
        <Grid Grid.Row="1" ColumnDefinitions="220,*,Auto">
            <!-- Left nav -->
            <Border Grid.Column="0"
                    Background="{DynamicResource AppPanelBackgroundAltBrush}"
                    BorderBrush="{DynamicResource AppBorderBrush}"
                    BorderThickness="0,0,1,0">
                <StackPanel Margin="10,12" Spacing="6">
                    <ListBox ItemsSource="{Binding NavItems}"
                             SelectedItem="{Binding SelectedNavItem}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="vm:NavItemViewModel">
                                <Border CornerRadius="10"
                                        Padding="12,10"
                                        BorderBrush="{DynamicResource AppBorderBrush}"
                                        BorderThickness="0">
                                    <TextBlock Text="{Binding Label}"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Main content -->
            <Border Grid.Column="1"
                    Background="{DynamicResource AppWindowBackgroundBrush}">
                <ContentControl Margin="16"
                                Content="{Binding CurrentView}"/>
            </Border>

            <!-- AI panel -->
            <Border Grid.Column="2"
                    IsVisible="{Binding Ai.IsOpen}"
                    Background="{DynamicResource AppWindowBackgroundBrush}"
                    BorderBrush="{DynamicResource AppBorderBrush}"
                    BorderThickness="1,0,0,0">
                <views:AiPanelView Width="320"
                                   Margin="12"
                                   DataContext="{Binding Ai}"/>
            </Border>
        </Grid>
    </Grid>

</Window>
