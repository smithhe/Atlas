<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Atlas.UI.ViewModels"
             xmlns:models="using:Atlas.UI.Models"
             x:Class="Atlas.UI.Views.ProjectsView"
             x:DataType="vm:ProjectsViewModel">

    <Grid ColumnDefinitions="300,*" ColumnSpacing="16">
        <Border Classes="card" Padding="12">
            <StackPanel Spacing="10">
                <TextBlock Text="Projects" FontSize="14" FontWeight="SemiBold"/>
                <ListBox ItemsSource="{Binding Projects}"
                         SelectedItem="{Binding SelectedProject}"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="models:ProjectItem">
                            <Border BorderBrush="{DynamicResource AppBorderBrush}" BorderThickness="0,0,0,1" Padding="0,10">
                                <TextBlock Text="{Binding Name}"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Classes="card" Padding="12">
            <StackPanel Spacing="10">
                <TextBlock Text="{Binding SelectedProject.Name}" FontSize="16" FontWeight="SemiBold"/>
                <TextBlock Classes="secondary" Text="{Binding SelectedProject.Summary}"/>

                <Border Classes="card" Background="{DynamicResource AppPanelBackgroundAltBrush}" Padding="12">
                    <StackPanel Spacing="6">
                        <TextBlock Text="Linked tasks" FontWeight="SemiBold"/>
                        <TextBlock Classes="secondary" Text="(Placeholder)"/>
                    </StackPanel>
                </Border>

                <Border Classes="card" Background="{DynamicResource AppPanelBackgroundAltBrush}" Padding="12">
                    <StackPanel Spacing="6">
                        <TextBlock Text="Linked risks" FontWeight="SemiBold"/>
                        <TextBlock Classes="secondary" Text="(Placeholder)"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>


