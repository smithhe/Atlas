<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Atlas.UI.App"
             xmlns:local="using:Atlas.UI"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Resources>
        <!-- Core palette (spec) -->
        <Color x:Key="AppWindowBackgroundColor">#0F1115</Color>
        <Color x:Key="AppPanelBackgroundColor">#151922</Color>
        <Color x:Key="AppPanelBackgroundAltColor">#1A1F2B</Color>
        <Color x:Key="AppBorderColor">#2A2F3A</Color>
        <Color x:Key="AppTextPrimaryColor">#E6EAF2</Color>
        <Color x:Key="AppTextSecondaryColor">#AAB2C0</Color>
        <Color x:Key="AppAccentColor">#3B82F6</Color>

        <SolidColorBrush x:Key="AppWindowBackgroundBrush" Color="{DynamicResource AppWindowBackgroundColor}"/>
        <SolidColorBrush x:Key="AppPanelBackgroundBrush" Color="{DynamicResource AppPanelBackgroundColor}"/>
        <SolidColorBrush x:Key="AppPanelBackgroundAltBrush" Color="{DynamicResource AppPanelBackgroundAltColor}"/>
        <SolidColorBrush x:Key="AppBorderBrush" Color="{DynamicResource AppBorderColor}"/>
        <SolidColorBrush x:Key="AppTextPrimaryBrush" Color="{DynamicResource AppTextPrimaryColor}"/>
        <SolidColorBrush x:Key="AppTextSecondaryBrush" Color="{DynamicResource AppTextSecondaryColor}"/>
        <SolidColorBrush x:Key="AppAccentBrush" Color="{DynamicResource AppAccentColor}"/>

        <!-- Dots -->
        <SolidColorBrush x:Key="DotRedBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="DotYellowBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="DotGreenBrush" Color="#22C55E"/>
        <SolidColorBrush x:Key="DotBlueBrush" Color="#60A5FA"/>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />

        <Style Selector="Window">
            <Setter Property="Background" Value="{DynamicResource AppWindowBackgroundBrush}"/>
        </Style>

        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource AppTextPrimaryBrush}"/>
        </Style>

        <Style Selector="SelectableTextBlock">
            <Setter Property="Foreground" Value="{DynamicResource AppTextPrimaryBrush}"/>
        </Style>

        <Style Selector="TextBlock.secondary">
            <Setter Property="Foreground" Value="{DynamicResource AppTextSecondaryBrush}"/>
        </Style>

        <Style Selector="SelectableTextBlock.secondary">
            <Setter Property="Foreground" Value="{DynamicResource AppTextSecondaryBrush}"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="Background" Value="{DynamicResource AppPanelBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource AppTextPrimaryBrush}"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>

        <Style Selector="ComboBox">
            <Setter Property="Background" Value="{DynamicResource AppPanelBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource AppTextPrimaryBrush}"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style Selector="Button.primary">
            <Setter Property="Background" Value="{DynamicResource AppAccentBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource AppTextPrimaryBrush}"/>
        </Style>

        <Style Selector="Button.subtle">
            <Setter Property="Background" Value="{DynamicResource AppPanelBackgroundAltBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource AppTextPrimaryBrush}"/>
        </Style>

        <Style Selector="Border.card">
            <Setter Property="Background" Value="{DynamicResource AppPanelBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
    </Application.Styles>
</Application>